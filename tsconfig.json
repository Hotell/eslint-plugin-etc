{
  "compilerOptions": {
    "declaration": false,
    "importHelpers": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "outDir": "build",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017"
  },
  "exclude": [],
  "include": [
    "source/**/*.ts",
    "tests/**/*.ts"
  ]
}
